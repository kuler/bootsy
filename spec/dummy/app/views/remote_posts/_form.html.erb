<%= form_for(Post.new, remote: true, html: { id: 'new-remote-post' }) do |f| %>
  <div class="page-header">
    <h1>New remote post</h1>
  </div>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'col-md-12' %>
  </div>

  <div class="field">
    <%= f.label :content %>
    <%= f.bootsy_area :content, rows: 16, class: 'col-md-12' %>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-default' %>
  </div>
<% end %>
